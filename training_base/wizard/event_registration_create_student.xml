<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_event_registration_create_student_form" model="ir.ui.view">
            <field name="name">student_from_event_registration.form</field>
            <field name="model">wizard.student_from_event_registration</field>
            <field name="arch" type="xml">
                <form string="Registration">
                      <div class="oe_title">
                          <field name="already_partner"/>
                          <label string="Already Partner"/>
                          <field name="partner_id" placeholder="Partner" options="{'no_create_edit': True}" attrs="{'required':[('already_partner','=',True)],'invisible': [('already_partner','=', False)]}"/>
                      </div>
                      <div class="oe_title">
                          <field name="already_student"/>
                          <label string="Already Student"/>
                          <field name="student_id" placeholder="Student" options="{'no_create_edit': True}" attrs="{'required':[('already_student','=',True)],'invisible': [('already_student','=', False)]}"/>
                      </div>
                      <field name="image" widget="image" class="oe_left oe_avatar"/>
                      <div class="oe_title">
                          <h3>
                              <field name="title" placeholder="Title"/>
                          </h3>
                          <h1>
                              <table>
                                  <tr>
                                      <td style="padding-right:10px;">
                                          <field name="name" required="1" placeholder="First Name"/>
                                      </td>
                                  </tr>
                              </table>
                          </h1>
                      </div>
                      <group>
                        <field name="event_registration_id" invisible="1"/>
                      </group>

                      <notebook colspan="4">
                          <page name="personal_information" string="Personal Information" attrs="{'invisible':[('already_student', '=', True)]}">
                              <group col="4" colspan="4" name="personal_detail">
                                  <field name="gender" attrs="{'required':[('already_student', '=', False)]}"/>
                                  <field name="birth_date" attrs="{'required':[('already_student', '=', False)]}"/>
                                  <field name="nationality"/>
                                  <field name="visa_info"/>
                                  <field name="lang"/>
                                  <field name="category_id"/>
                                  <field name="email" required="1"/>
                              </group>
                              <group string="Address Detail" name="address">
                                  <label for="type"/>
                                  <div name="div_type">
                                      <field class="oe_inline" name="type"/>
                                  </div>
                                  <label for="street" string="Address"/>
                                  <div name="div_address">
                                      <field name="street" placeholder="Street..."/>
                                      <field name="street2" placeholder="Street2"/>
                                      <div class="address_format">
                                          <field name="city" placeholder="City" style="width: 40%%"/>
                                          <field name="state_id" class="oe_no_button" placeholder="State" style="width: 37%%" options='{"no_open": True}'/>
                                          <field name="zip" placeholder="ZIP" style="width: 20%%"/>
                                      </div>
                                      <field name="country_id" placeholder="Country" class="oe_no_button" options='{"no_open": True}'/>
                                  </div>
                              </group>
                          </page>
                      </notebook>

                    <footer>
                        <button string="Apply" name="action_create_student" type="object" class="btn-primary"/>
                        <button string="Skip" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_event_registration_create_student" model="ir.actions.act_window">
            <field name="name">Create Or link Student</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.student_from_event_registration</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_event_registration_create_student_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>
</odoo>
