<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="view_learning_subject_tree" model="ir.ui.view">
            <field name="name">learning.subject.tree</field>
            <field name="model">learning.subject</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Subject">
                    <field name="name" />
                    <field name="code" />
                    <field name="subject_theme"/>
                    <field name="subject_type" />
                    <field name="duration" widget="float_time"/>
                    <field name="coeff"/>
                </tree>
            </field>
        </record>
        <record id="view_learning_subject_form" model="ir.ui.view">
            <field name="name">learning.subject.form</field>
            <field name="model">learning.subject</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Subject">
                    <sheet>
                        <group col="4">
                            <field name="name" />
                            <field name="code" />
                            <field name="subject_theme" />
                            <field name="subject_type" />
                            <field name="duration"/>
                            <field name="coeff"/>
                            <field name="description" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_learning_subject_search" model="ir.ui.view">
            <field name="name">learning.subject.search</field>
            <field name="model">learning.subject</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Subject">
                    <field name="name" />
                    <field name="code" />
                    <field name="subject_theme" />
                    <field name="subject_type" />
                    <separator/>
                    <group expand="0" string="Group By...">
                        <filter name="type" string="Type" domain="[]"
                            context="{'group_by':'subject_type'}" />
                    </group>
                </search>
            </field>
        </record>
</odoo>
