<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="view_learning_subject_tree" model="ir.ui.view">
            <field name="name">learning.subject.tree</field>
            <field name="model">learning.subject</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Subject">
                    <field name="name" />
                    <field name="code" />
                    <field name="type" />
                    <field name="subject_type" />
                </tree>
            </field>
        </record>
        <record id="view_learning_subject_form" model="ir.ui.view">
            <field name="name">learning.subject.form</field>
            <field name="model">learning.subject</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Subject">
                    <sheet>
                        <group col="4">
                            <field name="name" />
                            <field name="code" />
                            <field name="type" />
                            <field name="subject_type" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_learning_subject_search" model="ir.ui.view">
            <field name="name">learning.subject.search</field>
            <field name="model">learning.subject</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Subject">
                    <field name="name" />
                    <field name="code" />
                    <field name="type" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Type" domain="[]"
                            context="{'group_by':'type'}" />
                    </group>
                </search>
            </field>
        </record>
</odoo>
