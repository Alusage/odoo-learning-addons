<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record model="ir.ui.view" id="kanban_view_teacher">
            <field name="name">teacher Kanban</field>
            <field name="model">learning.teacher</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="id"/>
                    <field name="image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_res_partner_kanban">
                                <div class="o_kanban_image">
                                    <t t-if="record.image.value">
                                        <img alt="teacher" t-att-src="kanban_image('learning.teacher', 'image', record.id.value)"/>
                                    </t>
                                    <t t-if="!record.image.value">
                                        <img alt="teacher" t-att-src='_s + "/base/static/src/img/avatar.png"'/>
                                    </t>
                                </div>
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open">
                                            <field name="name" />
                                            <t t-if="record.lastname.raw_value">
                                                <field name="lastname" />
                                            </t>
                                        </a>
                                    </h4>
                                    <ul>
                                        <li t-if="record.contact_address.raw_value">
                                            <field name="contact_address" />
                                        </li>
                                        <li t-if="record.phone.raw_value">
                                            <field name="phone" />
                                        </li>
                                        <li t-if="record.mobile.raw_value">
                                            <field name="mobile" />
                                        </li>
                                        <li t-if="record.email.raw_value">
                                            <a t-attf-href="mailto:#{record.email.value}">
                                                <field name="email" />
                                            </a>
                                        </li>
                                        <li t-if="record.lang.raw_value">
                                            <field name="lang" />
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="view_learning_teacher_tree" model="ir.ui.view">
            <field name="name">learning.teacher.tree</field>
            <field name="model">learning.teacher</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="teacher">
                    <field name="title" />
                    <field name="name" />
                    <field name="lastname" />
                </tree>
            </field>
        </record>
        <record id="view_learning_teacher_form" model="ir.ui.view">
            <field name="name">learning.teacher.form</field>
            <field name="model">learning.teacher</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="teacher">
                <header>
                    <button name="%(teacher_create_employee_act)d" string="Create Employee" type="action" class="oe_highlight" attrs="{'invisible': [('emp_id', '!=', False)]}"/>
                </header>
                    <sheet>
                        <field name="image" widget="image" class="oe_left oe_avatar" />
                        <div class="oe_title">
                            <h1>
                                <field name="title" placeholder="Title" style="width: 30%%" />
                            </h1>
                            <h1><table>
                                <tr>
                                <td style="padding-right:10px"><field name="name" required="1" placeholder="First Name" /></td>
                                <td style="padding-right:10px"><field name="lastname" placeholder="Last Name" /></td>
                                </tr>
                                </table>
                            </h1>
                        </div>
                        <group col="6" colspan="4">
                            <field name="gender" />
                            <field name="phone" />
                            <field name="mobile" />
                            <field name="email" />
                        </group>
                        <notebook colspan="4">
                            <page name="personal_information" string="Personal Information">
                                <group col="4">
                                    <field name="birth_date" />
                                    <field name="nationality" />
                                    <field name="visa_info" />
                                    <field name="lang" />
                                    <field name='emp_id' />
                                </group>
                                <group string="Address Detail" name="address">
                                    <label for="type" />
                                    <div name="div_type">
                                        <field class="oe_inline" name="type" />
                                    </div>
                                    <label for="street" string="Address" />
                                    <div name="div_address">
                                        <field name="street" placeholder="Street..." />
                                        <field name="street2" placeholder="Street2" />
                                        <div class="address_format">
                                            <field name="city" placeholder="City" style="width: 40%%" />
                                            <field name="state_id" class="oe_no_button"
                                                placeholder="State" style="width: 37%%" options='{"no_open": True}' />
                                            <field name="zip" placeholder="ZIP" style="width: 20%%" />
                                        </div>
                                        <field name="country_id" placeholder="Country" class="oe_no_button"
                                            options='{"no_open": True}' />
                                    </div>
                                </group>
                            </page>
                            <page name="subjects" string="Subjects">
                                <field name="teacher_subject_ids" colspan="4" nolabel="1" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_learning_teacher_search" model="ir.ui.view">
            <field name="name">learning.teacher.search</field>
            <field name="model">learning.teacher</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="teacher">
                    <field name="name" filter_domain="['|','|',('display_name','ilike',self),('ref','=',self),('email','ilike',self)]"/>
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter name="nationality" string="Nationality" domain="[]"
                            context="{'group_by':'nationality'}" />
                        <filter name="language" string="Language" domain="[]" context="{'group_by':'lang'}" />
                    </group>
                </search>
            </field>
        </record>

</odoo>
